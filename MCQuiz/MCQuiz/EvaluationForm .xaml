<Page x:Class="MCQuiz.EvaluationForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MCQuiz"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="EvaluationForm" Height="497" Width="814">

    <Grid>
        <TextBox x:Name="txt_answers" HorizontalAlignment="Left" Height="230" Margin="50,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="720"/>
        <Label x:Name="lbl_result" Content="LOL" HorizontalAlignment="Left" Margin="245,375,0,0" VerticalAlignment="Top" Height="35" Width="160"/>
        <Label x:Name="lbl_success" Content="LOL" HorizontalAlignment="Left" Margin="50,375,0,0" VerticalAlignment="Top" Height="30" Width="135"/>
        <Button x:Name="btn_start_form" Content="Zurück zum Menü" HorizontalAlignment="Left" Margin="610,375,0,0" VerticalAlignment="Top" Width="160" Click="btn_start_form_Click" Height="40"/>

    </Grid>
</Page>
